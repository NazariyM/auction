//- product-item
mixin productItem(type, img, classMod)
	+b.product-item(class= classMod)
		case type
			when 'vertical'
				+e.A.img-wrap(href='img/content/products/product_lg.jpg' data-fancybox='product-item-1')
					+e.img-zoom
						+i('zoom', 'product-item__img-zoom-icon')
					+e.IMG.img(src=`img/content/products/product_${img}.jpg`, alt='image', title='')

				+e.content
					+e.H5.title.title.title_xs Мишки в лесу
					+e.data.user-info
						+e.SPAN.data-col (холст, масло)
						+e.SPAN.data-col
							span Шишкин И.
							span
								| (
								+i('star')
								| 5 347)

					+e.time
						+i('sand-clock')
						| Осталось:
						= ' '
						span 3 дня

					+e.details
						+e.bids
							span 50
							| ставок
						+e.price 150 000 руб.

				.control-panel.control-panel_horiz-sm.js-mob-tooltips
					a.control-panel__btn.control-panel__btn_bid(href='#!')
						+i('hammer')
						span.control-panel__btn-tip
							span Сделать ставку
					a.control-panel__btn.control-panel__btn_add(href='#!')
						+i('beg')
						span.control-panel__btn-tip
							span Добавить
								br
								| в мои лоты
					a.control-panel__btn.control-panel__btn_more(href='#!')
						+i('list')
						span.control-panel__btn-tip
							span Подробнее

			when 'horizontal'
				+e.A.img-wrap(href='img/content/products/product_lg.jpg' data-fancybox='product-item-2')
					+e.img-zoom
						+i('zoom', 'product-item__img-zoom-icon')
					+e.IMG.img(src=`img/content/products/product_${img}.jpg`, alt='image', title='')

				+e.content
					+e.H5.title.title.title_xs Мишки в лесу
					+e.data.user-info
						+e.SPAN.data-col (холст, масло)
						+e.SPAN.data-col
							span Шишкин И.
							span
								| (
								+i('star')
								| 5 347)
					+e.P.descr.js-dot Картина пользуется популярностью благодаря композиционному включению в пейзажное полотно элементов анималистической сюжетности...
					+e.A.read-link.link(href='#!') Читать далее
						.link__icon.icon-arrow-r-black

				+e.details
					+e.price 150 000 руб.
					+e.details-block
						+e.details-item Доставка:
							span DHL
						+e.details-item Оплата:
							+e.SVG.details-icon.icon-visa(xmlns='http://www.w3.org/2000/svg', viewBox='0 0 9.63 2.97')
								path(fill='#1a3680' d='M8.9,2.92l-.09-.43h-1l-.16.43H6.82L8,.29A.38.38,0,0,1,8.39.05H9l.64,2.87ZM8.44.83c0,.11-.1.28-.1.27L8,1.9h.65L8.5,1.07Z')
								path(fill='#1a3680' d='M5.51,3a2.59,2.59,0,0,1-.87-.16l.11-.64.1,0a1.59,1.59,0,0,0,.73.15c.23,0,.47-.08.47-.28s-.1-.21-.4-.35S5,1.36,5,1,5.51,0,6.28,0A2,2,0,0,1,7,.12L6.88.74l-.07,0A1.51,1.51,0,0,0,6.22.6c-.3,0-.44.13-.44.25s.16.22.44.35c.45.21.66.46.65.78C6.87,2.58,6.33,3,5.51,3Z')
								polygon(fill='#1a3680' points='4.15 2.92 3.37 2.92 3.85 0.05 4.64 0.05 4.15 2.92')
								path(fill='#1a3680' d='M1.48,2.92.72.2A3.1,3.1,0,0,1,1.8,1.39L1.94,2l.77-2h.83L2.3,2.92Z')
								path(fill='#ed9f01' d='M0,0H1.22a.3.3,0,0,1,.34.23l.27,1.27A2.5,2.5,0,0,0,0,.08Z')

							+e.SVG.details-icon.icon-mc(xmlns='http://www.w3.org/2000/svg', viewBox='0 0 6.43 3.99')
								circle(fill='#ea001b' cx='1.99', cy='1.99', r='1.99')
								circle(fill='#ea001b' cx='4.44', cy='1.99', r='1.99')
								path(fill='#ff5f01' d='M3.21,3.57a2,2,0,0,1,0-3.15,2,2,0,0,1,0,3.15Z')

						+e.time
							+i('sand-clock')
							| Осталось:
							span 3 дня

						+e.details-item._bid Последняя ставка:
							span Headoff

				.control-panel.control-panel_vert-sm.js-mob-tooltips
					.control-panel__bids
						span 50
						| ставок
					a.control-panel__btn.control-panel__btn_bid(href='#!')
						+i('hammer')
						span.control-panel__btn-tip
							span Сделать ставку
					a.control-panel__btn.control-panel__btn_add(href='#!')
						+i('beg')
						span.control-panel__btn-tip
							span Добавить
								br
								| в мои лоты
					a.control-panel__btn.control-panel__btn_more(href='#!')
						+i('list')
						span.control-panel__btn-tip
							span Подробнее

			when 'horizontal-simple'
				+e.A.img-wrap(href='img/content/products/product_lg.jpg' data-fancybox='product-item-2')
					+e.img-zoom
						+i('zoom', 'product-item__img-zoom-icon')
					+e.IMG.img(src=`img/content/products/product_${img}.jpg`, alt='image', title='')

				+e.content
					+e.H5.title.title.title_xs Мишки в лесу
					+e.data.user-info
						+e.SPAN.data-col (холст, масло)
						+e.SPAN.data-col
							span Шишкин И.
							span
								| (
								+i('star')
								| 5 347)

					+e.details-item Текущая цена:
						span 150 000 руб.

					+e.range.range-slider.js-range-slider-default
						+b.SPAN.range-slider__result._from 1 июня
						+b.range-slider__input
							input(type='text' name='' data-min-value='1' data-max-value='30' data-default-val-from='20' data-step='1')
						+b.SPAN.range-slider__result._to 30 июня

					+e.A.view-link.link._black(href='img/content/products/product_lg.jpg' data-fancybox='product-item-1')
						span Быстрый просмотр
						+i('zoom', 'link__icon')

				.control-panel.control-panel_vert-sm.control-panel_simple.js-mob-tooltips
					.control-panel__bids
						span 50
						| ставок
					a.control-panel__btn.control-panel__btn_bid(href='#!')
						+i('close')
						span.control-panel__btn-tip
							span Удалить
					a.control-panel__btn.control-panel__btn_add(href='#!')
						+i('gear')
						span.control-panel__btn-tip
							span Редактировать
					a.control-panel__btn.control-panel__btn_more(href='#!')
						+i('cloud-2')
						span.control-panel__btn-tip
							span Комментировать


